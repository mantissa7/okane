{
	"$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"lineWidth": 160,
		"attributePosition": "multiline"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useJsxKeyInIterable": "off"
			},
			"style": {
				"useSelfClosingElements": "off",
				"useEnumInitializers": "warn",
				"useTemplate": "warn"
			},
			"complexity": {
				"useLiteralKeys": "off"
			},
			"a11y": {
				"all": false,
				"useKeyWithClickEvents": "off"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	}
}
